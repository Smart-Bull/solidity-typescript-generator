{
	"compilerOptions": {
		"module": "ES2015",
		"target": "ES2020",
		"moduleResolution": "node",
		"rootDir": "source",
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"plugins": [ { "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js", "after": true } ],
	},
	"include": [
		"source/**/*.ts"
	]
}
